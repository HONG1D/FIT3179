{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Malaysia Domestic Tourism: Receipts and Visitors by State",
    "fontSize": 24,          
    "fontWeight": "bold"            
  },
  "width": 1450,
  "height": 800,
  "config": {
    "background": "#83d1f9",
    "view": {"stroke": "transparent"}
  },
  "projection": {"type": "mercator", "center": [109.5, 4], "scale": 4000, "translate": [700, 350]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179/3582fbd15ddd982d80a3a80a9b3cd04fc712b2b1/malaysia.json",
        "format": {"type": "topojson", "feature": "mytopojson"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/HONG1D/FIT3179/8148446d0e3b5b1e5de94373ccfcdbd57d6c19f5/combined_state_info_location.csv"},
            "key": "State",
            "fields": ["Receipts_RM_million"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Receipts_RM_million",
          "type": "quantitative",
          "scale": {"scheme": "greens"},
          "title": "Receipts (RM million)"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Receipts_RM_million", "title": "Receipts (RM million)"}
        ]
      }
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/HONG1D/FIT3179/8148446d0e3b5b1e5de94373ccfcdbd57d6c19f5/combined_state_info_location.csv"},
      "mark": {"type": "circle", "color": "orange", "opacity": 0.6},
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Total_Domestic_Visitors_000",
          "type": "quantitative",
          "scale": {"range": [100, 4000]},
          "title": "Domestic Visitors ('000)"
        },
        "tooltip": [
          {"field": "State", "title": "State"},
          {"field": "Total_Domestic_Visitors_000", "title": "Visitors ('000)"}
        ]
      }
    },
    {
       "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179/8148446d0e3b5b1e5de94373ccfcdbd57d6c19f5/combined_state_info_location.csv"
      },
      "mark": {
        "type": "text",
        "dx": -30,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State", "type": "nominal"}
      }

    }
  ]
}
